@model BincomSecondAssignment.Models.TaxModel

@{
    ViewData["Title"] = "Nigeria Tax Calculator";
}

<h1>Nigeria Income Tax Calculator</h1>

<form asp-action="CalculateTax" method="post">
    <div>
        <label for="Income">Enter your annual income (₦):</label>
        <input type="number" name="Income" id="Income" value="@Model?.Income" required />
    </div>
    <div>
        <button type="submit">Calculate Tax</button>
    </div>
</form>

@if (Model != null)
{
    <h3>Your calculated annual tax is: ₦@Model.Tax.ToString("F2")</h3>
}