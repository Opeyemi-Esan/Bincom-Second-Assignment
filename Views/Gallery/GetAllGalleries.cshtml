@model IEnumerable<BincomSecondAssignment.Models.Gallery>

@{
    ViewData["Title"] = "Gallery";
}

<h2>Gallery</h2>

<table class="table">
    <thead>
        <tr>
            <th>Photo</th>
            <th>Content Title</th>
            <th>Content Type</th>
            <th>View</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var photo in Model)
        {
            <tr>
                <td>
                    <img src="@Url.Action("GetPhoto", "Gallery", new { id = photo.Id })" alt="@photo.FileName" style="width: 100px; height: auto;" />
                </td>
                <td>@photo.Name</td>
                <td>@photo.ContentType</td>
                <td><a href="@Url.Action("GetPhoto", "Gallery", new { id = photo.Id })">View</a></td>
                <td>  
                    <form asp-action="Delete" asp-route-id="@photo.Id" method="post" style="display:inline;">  
                        <button class="color-danger" type="submit" onclick="return confirm('Are you sure you want to delete this image?');">Delete</button>  
                    </form>  
                </td> 
            </tr>
        }
    </tbody>
</table>

<p>
    <a href="@Url.Action("Index")">Upload New Photo</a>
</p>